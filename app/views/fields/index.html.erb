<h1>Listing fields</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
    <tr>
      <td><%= field.street %></td>
      <td><%= field.city %></td>
      <td><%= field.country %></td>
      <td><%= link_to 'Show', field, 'data-no-turbolink' => true %></td>
      <td><%= link_to 'Edit', edit_field_path(field) %></td>
      <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

